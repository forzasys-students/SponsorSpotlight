[Unit]
Description=Gunicorn instance to serve SponsorSpotlight
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/SponsorSpotlight
Environment="PATH=/home/ubuntu/SponsorSpotlight/venv/bin"
ExecStart=/home/ubuntu/SponsorSpotlight/venv/bin/gunicorn --workers 3 --bind unix:sponsorspotlight.sock -m 007 wsgi:app

[Install]
WantedBy=multi-user.target

